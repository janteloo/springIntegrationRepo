<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:int="http://www.springframework.org/schema/integration"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:int-stream="http://www.springframework.org/schema/integration/stream"

	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.1.xsd
   	http://www.springframework.org/schema/integration
	http://www.springframework.org/schema/integration/spring-integration.xsd
	http://www.springframework.org/schema/integration/stream
	http://www.springframework.org/schema/integration/stream/spring-integration-stream.xsd">

	<context:component-scan base-package="org.cpap.obligatorio.springIntegration.componentes"></context:component-scan>
	<int:annotation-config />
	<int:gateway service-interface="org.cpap.obligatorio.springIntegration.componentes.LlamadasGateway" id="llamadasGateway" />

	<!-- Connection Factory -->
	<bean id="rabbitConnFactory"
		class="org.springframework.amqp.rabbit.connection.CachingConnectionFactory">
		<constructor-arg>
			<value>localhost</value>
		</constructor-arg>
		<property name="username" value="guest" />
		<property name="password" value="guest" />
		<property name="virtualHost" value="/" />
		<property name="port" value="5672" />
	</bean>

	<!-- Spring AMQP Template -->
	<bean id="template" class="org.springframework.amqp.rabbit.core.RabbitTemplate">
		<property name="connectionFactory" ref="rabbitConnFactory" />
		<property name="routingKey" value="llamadasRabbitQueue" />
		<property name="queue" value="llamadasRabbitQueue" />
	</bean>

	<!-- Spring AMQP Admin -->
	<bean id="admin" class="org.springframework.amqp.rabbit.core.RabbitAdmin">
		<constructor-arg ref="rabbitConnFactory" />
	</bean>
</beans>
